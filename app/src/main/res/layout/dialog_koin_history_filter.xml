<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_canvas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical|bottom"
    android:background="@drawable/filter_background_color"
    android:orientation="vertical"
    android:padding="@dimen/def_margin">

    <TextView
        style="@style/MyTextHeader"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="Silahkan Pilih Filter" />

    <View
        style="@style/MyDivider"
        android:background="@color/colorPrimary" />

    <TextView
        style="@style/MyTextHeader"
        android:text="keterangan_koin" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_keterangan_p"
        style="@style/MyAutoCompleteTextViewFilledBox.V2"
        android:layout_marginTop="0dp"
        app:endIconMode="dropdown_menu"
        android:hint="keterangan_koin">

        <AutoCompleteTextView
            android:id="@+id/ed_keterangan"
            style="@style/MyAutoCompleteTextView.V2" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/ed_keterangan_id"
        style="@style/MyTextContent" />

    <View
        style="@style/MyDivider"
        android:background="@color/colorPrimary" />

    <TextView
        style="@style/MyTextHeader"
        android:text="Pilih Tanggal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_mulai_dari_p"
            style="@style/MyAutoCompleteTextViewFilledBox.V2"
            android:layout_marginTop="@dimen/space"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:hint="mulai_dari"
            app:endIconMode="none">

            <AutoCompleteTextView
                android:id="@+id/ed_mulai_dari"
                style="@style/MyAutoCompleteTextView.V2" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_sampai_p"
            style="@style/MyAutoCompleteTextViewFilledBox.V2"
            android:layout_marginTop="@dimen/space"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_weight="1"
            android:hint="sampai"
            app:endIconMode="none">

            <AutoCompleteTextView
                android:id="@+id/ed_sampai"
                style="@style/MyAutoCompleteTextView.V2" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <View
        style="@style/MyDivider"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_half"
        android:gravity="center">

        <Button
            android:id="@+id/btn_pilih_ulang"
            style="@style/MyButtonOutlined"
            android:text="Pilih Ulang" />

        <Button
            android:id="@+id/btn_pilih"
            style="@style/MyButtonContained"
            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginLeft="@dimen/def_margin"
            android:text="Pilih" />
    </LinearLayout>
</LinearLayout>